<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="70dp"
    android:id="@+id/container"
    android:layout_marginVertical="12dp"
    android:layout_gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="3dp"
        android:clickable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/logotipCard"
        android:layout_marginTop="15dp"
        android:layout_marginStart="14dp"
        android:elevation="2dp"
        android:src="@drawable/logotype_uzcard"
        app:layout_constraintTop_toTopOf="@id/cardItem"
        app:layout_constraintLeft_toLeftOf="@id/cardItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:fontFamily="@font/acrom_bold"
        android:id="@+id/moneyIsCard"
        android:textStyle="bold"
        android:elevation="2dp"
        android:text="@string/string_balance"
        android:textSize="12sp"
        android:textColor="#26263B"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toBottomOf="@id/cardItem"
        app:layout_constraintLeft_toLeftOf="@id/cardItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="сум"
        android:textSize="8sp"
        android:textColor="#26263B"
        android:elevation="2dp"
        android:fontFamily="@font/acrom_bold"
        app:layout_constraintBaseline_toBaselineOf="@id/moneyIsCard"
        app:layout_constraintLeft_toRightOf="@id/moneyIsCard"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="#26263B"
        android:fontFamily="@font/acrom_bold"
        android:id="@+id/numberCard"
        android:text="@string/string_card_number"
        android:textStyle="bold"
        android:textSize="8sp"
        android:elevation="2dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintTop_toTopOf="@id/cardItem"
        app:layout_constraintRight_toRightOf="@id/cardItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/bgImage"
        android:elevation="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_1"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toTopOf="@id/cardItem"
        app:layout_constraintLeft_toLeftOf="@id/cardItem"
        app:layout_constraintBottom_toBottomOf="@id/cardItem"
        app:layout_constraintRight_toRightOf="@id/cardItem"
        android:layout_width="0dp"
        android:layout_height="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>